{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/ui/(.*)",
      "dest": "/dist/main.js"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "/dist/main.js"
    },
    {
      "src": "/swagger/(.*)",
      "dest": "/dist/main.js"
    },
    {
      "src": "/health",
      "dest": "/dist/main.js"
    },
    {
      "src": "/admin",
      "dest": "/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/main.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "API_PREFIX": "api/v1"
  }
}
